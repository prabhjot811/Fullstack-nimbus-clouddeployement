name: CI

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build-test:
    name: Install • Test • Build
    runs-on: ubuntu-latest
    strategy:
      matrix:
        node-version: [18.x]
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Use Node.js ${{ matrix.node-version }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ matrix.node-version }}
          cache: 'npm'

      - name: Install dependencies
        run: |
          # prefer npm ci when lockfile exists, fall back to npm install
          if [ -f package-lock.json ]; then npm ci; else npm install; fi

      - name: Run tests
        run: npm test

      - name: Build
        run: npm run build

      - name: Upload build artifact
        uses: actions/upload-artifact@v4
        with:
          name: build-artifact
          path: build

  deploy-pages:
    name: Deploy (GitHub Pages) (optional)
    needs: build-test
    runs-on: ubuntu-latest
    # Controlled by the repo secret ENABLE_PAGES. Set ENABLE_PAGES to "true" to enable deployment.
    env:
      DEPLOY: ${{ secrets.ENABLE_PAGES }}
    if: env.DEPLOY == 'true'
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Download build artifact
        uses: actions/download-artifact@v4
        with:
          name: build-artifact
          path: build

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./build
